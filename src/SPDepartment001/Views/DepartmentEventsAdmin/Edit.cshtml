@model DepartmentEvent
@{
    ViewBag.Title = ViewContext.ActionDescriptor.DisplayName + "Employee";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AreExpensesGenerated" />
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        @if (Model.AreExpensesGenerated)
        {
            <select class="form-control"
                    asp-for="EmployeeId"
                    asp-items="ViewBag.Employees" 
                    disabled>
                <option disabled selected value="">Select an Employee</option>
            </select>
        }
        else
        {
            <select class="form-control"
                 asp-for="EmployeeId"
                 asp-items="ViewBag.Employees">
                <option disabled selected value="">Select an Employee</option>
            </select>
        }
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfEvent"></label>
        <div><span asp-validation-for="DateOfEvent" class="text-danger"></span></div>
        @if (Model.AreExpensesGenerated)
        {
            <input asp-for="DateOfEvent" type="date" class="form-control" disabled />
        }
        else
        {
            <input asp-for="DateOfEvent" type="date" class="form-control" />
        }
    </div>
    <div class="form-group">
        <label asp-for="AmountOfEmployee"></label>
        <div><span asp-validation-for="AmountOfEmployee" class="text-danger"></span></div>
        @if (Model.AreExpensesGenerated)
        {
            <input asp-for="AmountOfEmployee" class="form-control" disabled />
        }
        else
        {
            <input asp-for="AmountOfEmployee" class="form-control" />
        }
    </div>
    @*<div class="form-group">
            <label asp-for="Date"></label>
            <div><span asp-validation-for="Date" class="text-danger"></span></div>
            <input asp-for="Date" class="form-control" />
        </div>*@
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
