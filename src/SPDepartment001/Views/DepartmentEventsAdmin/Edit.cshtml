@model DepartmentEvent
@{
    ViewBag.Title = ViewContext.ActionDescriptor.DisplayName + "Employee";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select class="form-control"
                asp-for="EmployeeId"
                asp-items="ViewBag.Employees">
            <option disabled selected value="">Select an Employee</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DateOfEvent"></label>
        <div><span asp-validation-for="DateOfEvent" class="text-danger"></span></div>
        <input asp-for="DateOfEvent" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AmountOfEmployee"></label>
        <div><span asp-validation-for="AmountOfEmployee" class="text-danger"></span></div>
        <input asp-for="AmountOfEmployee" class="form-control" />
    </div>
    @*<div class="form-group">
            <label asp-for="Date"></label>
            <div><span asp-validation-for="Date" class="text-danger"></span></div>
            <input asp-for="Date" class="form-control" />
        </div>*@
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
